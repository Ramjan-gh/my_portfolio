{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    
    /* 1. Tell TS where to find files and where to put them */
    "rootDir": "./",
    "outDir": "./dist",

    /* 2. Other important settings for your project */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    
    /* Keep these if you want, but they aren't strictly necessary for the fix */
    "sourceMap": true,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}